<div class="show-container">
  <h1><%= @research.title %></h1>

  <div class="fields row">
    <h3><%= @research.category %></h3>
  </div>
  <div class="fields row">
    <h3><%= @research.description %></h3>
  </div>
  <div class="row col-md-12 col-md-offset-4 button-row">
    <%= link_to "Download Research in PDF", research_path(@research, format: "pdf"), :target => '_blank', class: "btn btn-danger" %>
    <%= link_to "Email me research", :controller => "researches", :action => "send_research", :id => @research.id  %>
  </div>
  <div class="fields row">
    <h3><%= @research.body.html_safe %></h3>
  </div>
</div>
